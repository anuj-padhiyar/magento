<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <adminhtml_order_index>
        <reference name="content">
            <block type="order/adminhtml_order" name="order_grid" />
        </reference>
    </adminhtml_order_index>

    <adminhtml_order_showcustomer>
        <reference name="content">
            <block type="order/adminhtml_order_customer" name="customer_grid" />
        </reference>
    </adminhtml_order_showcustomer>

    <adminhtml_order_grid>
        <reference name="head">
            <action method="addItem"><type>js</type><name>ajax/jquery.js</name></action>
            <action method="addItem"><type>js</type><name>ajax/noconflict.js</name></action>
            <action method="addItem"><type>js</type><name>ajax/mage.js</name></action>
        </reference>
        <reference name="root">
            <block type="order/adminhtml_order_cart" template="order/cart.phtml" name="content">
                <block type="order/adminhtml_order_cart_billingAddress" template="order/cart/billingaddress.phtml" name="billing_address"></block>
                <block type="order/adminhtml_order_cart_shippingAddress" template="order/cart/shippingaddress.phtml" name="shipping_address"></block>
                <block type="order/adminhtml_order_cart_account" template="order/cart/account.phtml" name="account"></block>
                <block type="order/adminhtml_order_cart_total" template="order/cart/total.phtml" name="total"></block>
                <block type="order/adminhtml_order_cart_shippingMethod" template="order/cart/shippingmethod.phtml" name="shipping_method"></block>
                <block type="order/adminhtml_order_cart_paymentMethod" template="order/cart/paymentmethod.phtml" name="payment_method"></block>
                <block type="order/adminhtml_order_cart_item" template="order/cart/item.phtml" name="item"></block>
                <block type="order/adminhtml_order_cart_comment" template="order/cart/comment.phtml" name="comment"></block>
                <block type="order/adminhtml_order_cart_product" name="product"></block>
            </block>
        </reference>
    </adminhtml_order_grid>

    <adminhtml_order_showorder>
        <reference name="head">
            <action method="addItem"><type>js</type><name>ajax/jquery.js</name></action>
            <action method="addItem"><type>js</type><name>ajax/noconflict.js</name></action>
            <action method="addItem"><type>js</type><name>ajax/mage.js</name></action>
        </reference>
        <reference name="content">
            <block type="order/adminhtml_placeOrder" template="order/placeOrder.phtml" name="placeorder" />
        </reference>
    </adminhtml_order_showorder>
</layout>