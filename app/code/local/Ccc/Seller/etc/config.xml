<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Ccc_Seller>
			<version>0.0.2</version>
		</Ccc_Seller>
	</modules>
	<admin>
		<routers>
			<seller>
				<use>admin</use>
				<args>
					<module>Ccc_Seller</module>
					<frontName>seller</frontName>
				</args>
			</seller>
		</routers>
	</admin>
	<adminhtml>
		<menu>
			<Ccc ccc="ccc">
				<title>Ccc</title>
				<sort_order>100</sort_order>
				<action>seller/adminhtml_seller</action>
			</Ccc>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<seller>
							<title>Seller Module</title>
							<sort_order>0</sort_order>
						</seller>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<global>
		<models>
			<ccc_seller>
				<class>Ccc_Seller_Model</class>
				<resourceModel>ccc_seller_resource</resourceModel>
			</ccc_seller>
			<ccc_seller_resource>
				<class>Ccc_Seller_Model_Resource</class>
				<entities>
					<data>
						<table>ccc_seller_data</table>
					</data>
				</entities>
			</ccc_seller_resource>
		</models>
		<resources>
            <seller_setup>
                <setup>
                    <module>Ccc_Seller</module>
                </setup>
            </seller_setup>
    	</resources>
    	<blocks>
    		<seller>
    			<class>Ccc_Seller_Block</class>
    		</seller>
    	</blocks>
    	<helpers>
    		<seller>
    			<class>Ccc_Seller_Helper</class>
    		</seller>
    	</helpers>
	</global>
</config>