<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Ccc_Vendor>
            <version>0.0.11</version>
        </Ccc_Vendor>
    </modules>
    <frontend>
        <routers>
            <vendor>
                <use>standred</use>
                <args>
                    <module>Ccc_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <Ccc_Vendor>
                    <file>vendor.xml</file>
                </Ccc_Vendor>
            </updates>
        </layout>
		<events>
            <controller_action_layout_load_before>
                <observers>
                    <vendor_is_logged_in_observer>
                        <class>vendor/observer</class>
                        <method>beforeLoadLayout</method>
                    </vendor_is_logged_in_observer>
                </observers>
            </controller_action_layout_load_before>
            <sales_model_service_quote_submit_after>
                <observers>
                    <restore_vendor_group_id>
                        <class>vendor/observer</class>
                        <method>quoteSubmitAfter</method>
                    </restore_vendor_group_id>
                </observers>
            </sales_model_service_quote_submit_after>
        </events>
    </frontend>
    <admin>
		<routers>
			<vendor>
				<use>admin</use>
				<args>
					<module>Ccc_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
	</admin>
    <adminhtml>
		<menu>
			<vendor>
				<title>Vendor</title>
				<sort_order>120</sort_order>
				<children>
					<vendor>
						<title>Manage Vendor</title>
						<sort_order>1</sort_order>
						<action>vendor/Adminhtml_Vendor</action>
					</vendor>
					<vendor_attribute>
						<title>Manage Attribute</title>
						<sort_order>2</sort_order>
						<action>vendor/Adminhtml_Vendor_Attribute</action>
					</vendor_attribute>
					<vendor_set>
						<title>Manage Attribute set</title>
						<sort_order>3</sort_order>
						<action>vendor/Adminhtml_Vendor_Set</action>
					</vendor_set>
					<vendor_product>
						<title>Manage Product</title>
						<sort_order>4</sort_order>
						<children>
							<product>
								<title>Product</title>>
								<sort_order>1</sort_order>
								<action>vendor/Adminhtml_Product</action>
							</product>
							<product_attribute>
								<title>Product Attribute</title>>
								<sort_order>1</sort_order>
								<action>vendor/Adminhtml_Product_Attribute</action>
							</product_attribute>
							<product_attribute_set>
								<title>Product Attribute Set</title>>
								<sort_order>1</sort_order>
								<action>vendor/Adminhtml_Product_Set</action>
							</product_attribute_set>
						</children>
					</vendor_product>
				</children>
			</vendor>
		</menu>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
                </vendor>
			</updates>
		</layout>
	</adminhtml>
	<global>
		<blocks>
			<vendor>
				<class>Ccc_Vendor_Block</class>
			</vendor>
		</blocks>
		<helpers>
            <vendor>
                <class>Ccc_Vendor_Helper</class>
            </vendor>
        </helpers>
		<models>
			<vendor>
				<class>Ccc_Vendor_Model</class>
				<resourceModel>vendor_resource</resourceModel>
			</vendor>
			<vendor_resource>
				<class>Ccc_Vendor_Model_Resource</class>
				<entities>
	                <vendor>
	                    <table>vendor</table>
	                </vendor>
	                <vendor_datetime>
	                	<table>vendor_datetime</table>
		            </vendor_datetime>
		            <vendor_decimal>
		                <table>vendor_decimal</table>
		            </vendor_decimal>
		            <vendor_int>
		                <table>vendor_int</table>
		            </vendor_int>
		            <vendor_text>
		                <table>vendor_text</table>
		            </vendor_text>
		            <vendor_varchar>
		                <table>vendor_varchar</table>
		            </vendor_varchar>
		            <vendor_char>
		                <table>vendor_char</table>
		            </vendor_char>
		            <eav_attribute>
						<table>vendor_eav_attribute</table>
                    </eav_attribute>
					<product>
						<table>vendor_product_entity</table>
					</product>
					<productGroup>
						<table>vendor_product_attribute_group</table>
					</productGroup>
					<request>
						<table>vendor_product_request</table>
					</request>
		        </entities>
			</vendor_resource>
		</models>
		<resources>
			<vendor_setup>
				<setup>
					<module>Ccc_Vendor</module>
					<class>Ccc_Vendor_Model_Resource_Setup</class>
				</setup>
			</vendor_setup>
		</resources>
	</global>
</config>
